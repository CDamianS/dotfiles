set $mod Mod4

set $editor emacsclient -c
set $term foot
set $backupterm $editor --eval '(eat)'
set $browser firefox    
set $altbrowser icecat
set $files $editor --eval '(dired "~/")'
set $music $editor --eval '(mpc)'

font pango:Arimo Nerd Font 14

output * bg ~/.config/sway/catflowers.png fill

output eDP-1 {
    mode 1920x1080
    scale 1.25
}

input * {
  xkb_layout  us(altgr-intl)
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
    scroll_factor 1.0
}

set $left h
set $down j
set $up k
set $right l

gaps inner 5    
title_align center
default_border pixel 1
focus_follows_mouse yes
title_align center
default_floating_border pixel 1

bindswitch --reload --locked lid:on exec swaylock

include catppuccin-mocha

